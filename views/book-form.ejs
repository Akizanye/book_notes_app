<%- include('partials/header') %> <!-- header + opening tags -->

<section class="form-wrapper">
  <h2><%= title %></h2>
  <!-- Reuse same form for add/edit by passing action/method/book from the server -->
  <form action="<%= action %>" method="<%= method %>">
    <div class="field">
      <label for="title">Title *</label>
      <input type="text" id="title" name="title" value="<%= book.title || '' %>" required>
    </div>

    <div class="field">
      <label for="author">Author</label>
      <input type="text" id="author" name="author" value="<%= book.author || '' %>">
    </div>

    <div class="field">
      <label for="isbn">ISBN</label>
      <input type="text" id="isbn" name="isbn" value="<%= book.isbn || '' %>">
    </div>

    <div class="field">
      <label for="rating">Rating (1-5)</label>
      <input type="number" id="rating" name="rating" min="1" max="5" value="<%= book.rating || '' %>">
    </div>

    <div class="field">
      <label for="finished_on">Finished on</label>
      <input type="date" id="finished_on" name="finished_on" value="<%= book.finished_on ? new Date(book.finished_on).toISOString().split('T')[0] : '' %>">
    </div>

    <div class="field">
      <label for="notes">Notes</label>
      <textarea id="notes" name="notes" rows="4"><%= book.notes || '' %></textarea>
    </div>

    <div class="actions">
      <button class="button primary" type="submit">Save</button>
      <a class="button" href="/">Cancel</a>
    </div>
  </form>
</section>

<%- include('partials/footer') %> <!-- closing tags/footer -->

